{
	"name": "workspace-version-aligner-extension",
	"displayName": "Workspace Version Aligner",
	"description": "Manage package versions across monorepo workspaces with a visual interface",
	"version": "1.0.0",
	"publisher": "nyambogahezron",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"monorepo",
		"dependency",
		"version",
		"package",
		"workspace"
	],
	"activationEvents": [
		"onCommand:workspaceVersionAligner.openPanel",
		"workspaceContains:package.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "workspaceVersionAligner.openPanel",
				"title": "Open Version Aligner",
				"category": "Workspace Version Aligner"
			},
			{
				"command": "workspaceVersionAligner.scanWorkspaces",
				"title": "Scan Workspaces",
				"category": "Workspace Version Aligner"
			},
			{
				"command": "workspaceVersionAligner.addPackage",
				"title": "Add/Update Package",
				"category": "Workspace Version Aligner"
			},
			{
				"command": "workspaceVersionAligner.removePackage",
				"title": "Remove Package",
				"category": "Workspace Version Aligner"
			},
			{
				"command": "workspaceVersionAligner.syncVersions",
				"title": "Sync Package Versions",
				"category": "Workspace Version Aligner"
			},
			{
				"command": "workspaceVersionAligner.resolveConflicts",
				"title": "Resolve Version Conflicts",
				"category": "Workspace Version Aligner"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "workspaceVersionAligner.openPanel",
					"when": "resourceFilename == package.json",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "workspaceVersionAligner.openPanel"
				},
				{
					"command": "workspaceVersionAligner.scanWorkspaces"
				},
				{
					"command": "workspaceVersionAligner.addPackage"
				},
				{
					"command": "workspaceVersionAligner.removePackage"
				},
				{
					"command": "workspaceVersionAligner.syncVersions"
				},
				{
					"command": "workspaceVersionAligner.resolveConflicts"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "workspaceVersionAligner",
					"title": "Version Aligner",
					"icon": "$(package)"
				}
			]
		},
		"views": {
			"workspaceVersionAligner": [
				{
					"id": "workspaceVersionAligner.workspaceTree",
					"name": "Workspaces",
					"when": "workspaceVersionAligner.hasWorkspaces"
				},
				{
					"id": "workspaceVersionAligner.packageTree",
					"name": "Packages",
					"when": "workspaceVersionAligner.hasPackages"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "16.x",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.2.2"
	}
}
